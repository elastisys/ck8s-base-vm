{
  "description": "CK8S VM based on Ubuntu 18.04 LTS",
  "variables": {
    "containerd_version": "1.2.10-3",
    "docker_version": "5:18.09.9~3-0~ubuntu-bionic",
    "kubernetes_version": "1.15.11-00",

    "disk_size": "20480",

    "iso_url": "https://cloud-images.ubuntu.com/releases/bionic/release-20200317/ubuntu-18.04-server-cloudimg-amd64.img",
    "iso_checksum": "fe303093982221b85eeb0a3060851d6a3a012aa151daf77c6c49d2b727138794",


    "vm_name": "baseos.qcow2",
    "output_iso_checksum_url": "/tmp/ck8s-base-vm-checksums/baseos_sha256.checksums",

    "ssh_username": "ubuntu"
  },
  "builders": [
    {
      "name": "baseos",
      "type": "qemu",
      "accelerator": "kvm",
      "vm_name": "{{ user `vm_name` }}",
      "format": "qcow2",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "disk_image": true,
      "disk_size": "{{ user `disk_size`}}",
      "disk_interface": "virtio-scsi",
      "disk_discard": "unmap",
      "disk_compression": true,
      "skip_compaction": false,
      "headless": true,
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_private_key_file": ".ssh/id_rsa",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; sudo -S sh '/tmp/shutdown.sh'",
      "http_directory": "cloud-init/baseos",
      "http_port_min": 9000,
      "http_port_max": 9100,
      "vnc_bind_address": "0.0.0.0",
      "vnc_port_min": 5900,
      "vnc_port_max": 5900,
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-smp", "2" ],
        [ "-smbios", "type=1,serial=ds=nocloud-net;instance-id=packer;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/base-setup.sh",
      "expect_disconnect": true,
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive"
      ],
      "execute_command": "sudo -S bash -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./scripts/install-docker.sh",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive",
        "CONTAINERD_VERSION={{ user `containerd_version` }}",
        "DOCKER_VERSION={{ user `docker_version` }}"
      ],
      "execute_command": "sudo -S bash -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./scripts/install-k8s-tools.sh",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive",
        "KUBERNETES_VERSION={{ user `kubernetes_version` }}"
      ],
      "execute_command": "sudo -S bash -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./scripts/clean-up.sh",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive"
      ],
      "expect_disconnect": true,
      "execute_command": "sudo -S bash -c '{{ .Vars }} {{ .Path }}'"
    }
  ],
  "post-processors": [
    {
      "type": "checksum",
      "checksum_types": [
        "sha256",
        "md5"
      ],
      "output": "{{ user `output_iso_checksum_url` }}"
    }
  ]
}
